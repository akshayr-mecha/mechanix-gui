      level_80: /usr/share/mechanix/shell/lock-screen/assets/icons/status-bar/battery/battery_80_icon.svg
      level_70: /usr/share/mechanix/shell/lock-screen/assets/icons/status-bar/battery/battery_70_icon.svg
      level_60: /usr/share/mechanix/shell/lock-screen/assets/icons/status-bar/battery/battery_60_icon.svg
      level_50: /usr/share/mechanix/shell/lock-screen/assets/icons/status-bar/battery/battery_50_icon.svg
      level_40: /usr/share/mechanix/shell/lock-screen/assets/icons/status-bar/battery/battery_40_icon.svg
      level_30: /usr/share/mechanix/shell/lock-screen/assets/icons/status-bar/battery/battery_30_icon.svg
      level_20: /usr/share/mechanix/shell/lock-screen/assets/icons/status-bar/battery/battery_20_icon.svg
      level_10: /usr/share/mechanix/shell/lock-screen/assets/icons/status-bar/battery/battery_10_icon.svg
