title: Settings Panel # Empty
app:
  id: mechanix.shell.settings-panel # launcher
  text_multithreading: true # false
  antialiasing: true # false
  try_opengles_first: true # false
window:
  size: [480, 443] # [1024, 768]
  position: [0, 0] # [0, 0]
  min_size: [480, 100] # None
  max_size: null # None
  visible: true # true
  resizable: true # true
  decorations: true # true
  transparent: true # false
  always_on_top: false # false
  icon_path: null # Todo
fonts:
layout:
  grid:
    [
      "Wireless",
      "Bluetooth",
      "Battery",
      "Auto Rotate",
      "Settings",
      "Running Apps",
      "CPU",
      "Memory",
      "Sound",
      "Brightness",
    ]
modules:
  wireless:
    title: "Wireless"
    icon:
      off: /usr/share/mechanix/shell/settings-panel/assets/icons/wireless/wireless_off_icon.svg
      on: /usr/share/mechanix/shell/settings-panel/assets/icons/wireless/wireless_on_icon.svg
      low: /usr/share/mechanix/shell/settings-panel/assets/icons/wireless/wireless_low_icon.svg
      weak: /usr/share/mechanix/shell/settings-panel/assets/icons/wireless/wireless_weak_icon.svg
      good: /usr/share/mechanix/shell/settings-panel/assets/icons/wireless/wireless_good_icon.svg
      strong: /usr/share/mechanix/shell/settings-panel/assets/icons/wireless/wireless_strong_icon.svg
      not_found: /usr/share/mechanix/shell/settings-panel/assets/icons/wireless/wireless_not_found_icon.svg
  bluetooth:
    title: "Bluetooth"
    icon:
      on: /usr/share/mechanix/shell/settings-panel/assets/icons/bluetooth/bluetooth_on_icon.svg
      off: /usr/share/mechanix/shell/settings-panel/assets/icons/bluetooth/bluetooth_off_icon.svg
      connected: /usr/share/mechanix/shell/settings-panel/assets/icons/bluetooth/bluetooth_connected_icon.svg
      not_found: /usr/share/mechanix/shell/settings-panel/assets/icons/bluetooth/bluetooth_not_found_icon.svg
  battery:
    title: "Battery"
    icon:
      level_100: /usr/share/mechanix/shell/settings-panel/assets/icons/battery/battery_100_icon.svg
