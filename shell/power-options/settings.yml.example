title: Power Options # Empty
app:
  id: mechanix-power-options # mechanix-power-options
  text_multithreading: true # false
  antialiasing: true # false
  try_opengles_first: true # false
window:
  size: [480, 440] # [1024, 768]
  position: [0, 0] # [0, 0]
  min_size: [480, 440] # None
  max_size: null # None
  visible: true # true
  resizable: true # true
  decorations: true # true
  transparent: true # false
  always_on_top: false # false
  icon_path: null # Todo
modules:
  shutdown:
    icon: /usr/share/mechanix/shell/power-options/assets/icons/shutdown.svg
  restart:
    icon: /usr/share/mechanix/shell/power-options/assets/icons/restart.svg
  logout:
    icon: /usr/share/mechanix/shell/power-options/assets/icons/logout.svg
  background:
    icon: /usr/share/mechanix/shell/power-options/assets/icons/mecha-background-color.png
