      not_found: /usr/share/mechanix/shell/launcher/assets/icons/battery/charging/battery_not_found_icon.png
  rotation:
    title: "Auto Rotate"
    icon:
      portrait: /usr/share/mechanix/shell/launcher/assets/icons/rotation/portrait_icon.png
      landscape: /usr/share/mechanix/shell/launcher/assets/icons/rotation/landscape_icon.png
  power:
    icon:
      default: /usr/share/mechanix/shell/launcher/assets/icons/power_icon.png
  lock:
    icon:
      default: /usr/share/mechanix/shell/launcher/assets/icons/lock_icon.png
    min_time_long_press: 1
  settings:
    icon:
      default: /usr/share/mechanix/shell/launcher/assets/icons/settings_icon.png
  search:
    icon:
      default: /usr/share/mechanix/shell/launcher/assets/icons/search_icon.png
  launch:
    icon:
      default: /usr/share/mechanix/shell/launcher/assets/icons/launch_icon.png
  delete:
    icon:
      default: /usr/share/mechanix/shell/launcher/assets/icons/delete_icon.png
  close:
    icon:
      default: /usr/share/mechanix/shell/launcher/assets/icons/close_icon.png
  power_options:
    shutdown:
      icon: /usr/share/mechanix/shell/launcher/assets/icons/shutdown_icon.png
    restart:
      icon: /usr/share/mechanix/shell/launcher/assets/icons/restart_icon.png
  terminal:
    icon:
      default: /usr/share/mechanix/shell/launcher/assets/icons/terminal_icon.png
    run_command: ["sh", "-c", "alacritty --working-directory=/home/mecha"]
app_list:
  include_only:
  exclude:
  include:
  custom:
    - name: Mecha Connect
      exec: mecha-connect
      icon_name: mecha_connect_icon
      icon_path: /usr/share/mechanix/shell/launcher/assets/icons/app_drawer/mecha_connect_icon.png
    - name: Terminal
      exec: alacritty
      icon_name: terminal_icon
      icon_path: /usr/share/mechanix/shell/launcher/assets/icons/app_drawer/terminal_icon.png
    - name: Browser
      exec: epiphany-browser
      icon_name: browser_icon
      icon_path: /usr/share/mechanix/shell/launcher/assets/icons/app_drawer/browser_icon.png
    - name: File Manager
      exec: nautilus
      icon_name: file_manager_icon
      icon_path: /usr/share/mechanix/shell/launcher/assets/icons/app_drawer/file_manager_icon.png
    - name: Doom
      exec: /usr/games/chocolate-doom -iwad DOOM1.WAD -window 480x480
      icon_name: doom_icon
      icon_path: /usr/share/mechanix/shell/launcher/assets/icons/app_drawer/doom_icon.png
    - name: Game Emulator
      exec: mednafen
      icon_name: game_emulator_icon
      icon_path: /usr/share/mechanix/shell/launcher/assets/icons/app_drawer/game_emulator_icon.png