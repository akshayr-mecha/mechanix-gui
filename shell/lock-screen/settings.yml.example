title: Lock Screen # Empty
app:
  id: mechanix.shell.lock-screen # lock-screen
  text_multithreading: true # false
  antialiasing: true # false
  try_opengles_first: true # false
window:
  size: [480, 480] # [1024, 768]
  position: [0, 0] # [0, 0]
  min_size: [480, 100] # None
  max_size: null # None
  visible: true # true
  resizable: true # true
  decorations: true # true
  transparent: true # false
  always_on_top: false # false
  icon_path: null # Todo
fonts:
layout:
  grid: ["1", "2", "3", "4", "5", "6", "7", "8", "Home", "9", "0", "Back Space"]
modules:
  home:
    title: "Home"
    icon:
      default: /usr/share/mechanix/shell/lock-screen/assets/icons/home_icon.svg
  back_space:
    title: "Back Space"
    icon:
      default: /usr/share/mechanix/shell/lock-screen/assets/icons/backspace_icon.svg
  password_configs:
    keys_allowed: ["1", "2", "3", "4", "5", "6", "7", "8", "9", "0"]
    password_length: 4
  back:
    icon:
      default: /usr/share/mechanix/shell/lock-screen/assets/icons/back_icon.svg
  lock:
    icon:
      default: /usr/share/mechanix/shell/lock-screen/assets/icons/lock_icon.svg
  unlock:
    icon:
      default: /usr/share/mechanix/shell/lock-screen/assets/icons/unlock_icon.svg
  background:
    icon:
      default: /usr/share/mechanix/shell/lock-screen/assets/icons/mecha_background_color.png
  clock:
    format: "%I:%M %p" # https://docs.rs/chrono/latest/chrono/format/strftime/index.html
  bluetooth:
    icon:
      on: /usr/share/mechanix/shell/lock-screen/assets/icons/status-bar/bluetooth/bluetooth_on_icon.svg
      off: /usr/share/mechanix/shell/lock-screen/assets/icons/status-bar/bluetooth/bluetooth_off_icon.svg
      connected: /usr/share/mechanix/shell/lock-screen/assets/icons/status-bar/bluetooth/bluetooth_connected_icon.svg
      not_found: /usr/share/mechanix/shell/lock-screen/assets/icons/status-bar/bluetooth/bluetooth_not_found_icon.svg
  wireless:
    icon:
      off: /usr/share/mechanix/shell/lock-screen/assets/icons/status-bar/wireless/wireless_off_icon.svg
      on: /usr/share/mechanix/shell/lock-screen/assets/icons/status-bar/wireless/wireless_on_icon.svg
      low: /usr/share/mechanix/shell/lock-screen/assets/icons/status-bar/wireless/wireless_low_icon.svg
      weak: /usr/share/mechanix/shell/lock-screen/assets/icons/status-bar/wireless/wireless_weak_icon.svg
