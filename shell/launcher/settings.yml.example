        good: /usr/share/mechanix/shell/launcher/assets/icons/wireless/sm/wireless_good_icon.png
        strong: /usr/share/mechanix/shell/launcher/assets/icons/wireless/sm/wireless_strong_icon.png
        not_found: /usr/share/mechanix/shell/launcher/assets/icons/wireless/sm/wireless_not_found_icon.png
      lg:
        off: /usr/share/mechanix/shell/launcher/assets/icons/wireless/lg/wireless_off_icon.png
        on: /usr/share/mechanix/shell/launcher/assets/icons/wireless/lg/wireless_on_icon.png
        low: /usr/share/mechanix/shell/launcher/assets/icons/wireless/lg/wireless_low_icon.png
